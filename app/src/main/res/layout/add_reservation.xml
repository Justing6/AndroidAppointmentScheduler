<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/x">

    <TextView
        android:lineSpacingExtra="10dp"
        android:text="@string/addprompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:id="@+id/AddPrompt"
        android:textColor="#ff000000"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/emailbox"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:nextFocusForward="@+id/lnamebox"
        android:ems="10"
        android:id="@+id/fnamebox"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/AddPrompt"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:ems="10"
        android:nextFocusForward="@+id/phonebox"
        android:id="@+id/lnamebox"
        android:layout_below="@+id/fnamebox"
        android:layout_alignLeft="@+id/fnamebox"
        android:layout_alignStart="@+id/fnamebox"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailbox"
        android:hint="Email Address"
        android:layout_below="@+id/phonebox"
        android:layout_alignLeft="@+id/phonebox"
        android:layout_alignStart="@+id/phonebox"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:maxLength="14"
        android:id="@+id/phonebox"
        android:layout_marginTop="15dp"
        android:hint="Phone Number"
        android:layout_below="@+id/lnamebox"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
